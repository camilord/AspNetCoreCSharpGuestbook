@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model Guestbook.Models.GuestbookItem
@{
    ViewData["Title"] = "Guestbook";
}

    <div class="content">
        <h1 class="display-4">Write Guestbook</h1>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <form asp-controller="Guestbook" asp-action="Create">

            @Html.ValidationSummary()

            <div class="row">
                <div class="col-md-3 text-right">
                    @Html.LabelFor(x => x.GuestName)
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.GuestName)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 text-right">
                    @Html.LabelFor(x => x.Email)
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.Email)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 text-right">
                    @Html.LabelFor(x => x.Message)
                </div>
                <div class="col-md-9">
                    @Html.TextAreaFor(x => x.Message)
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    &nbsp;
                </div>
                <div class="col-md-9">
                    <div class="g-recaptcha" data-sitekey="@ViewBag.RecaptchaSiteKey"></div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3 text-right">
                    &nbsp;
                </div>
                <div class="col-md-9">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button> &nbsp;
                    <a href="/Guestbook/Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </form>

    </div>
